RewriteEngine On

RewriteRule ^index\.php$ - [L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule . index.php [QSA,L]

ServerSignature Off
Options -Indexes

<Files .htaccess>
  Order Allow,Deny
  Deny from all
</Files>

<Files auth.htpasswd>
  Order Allow,Deny
  Deny from all
</Files>

<Files config.ini>
  Order Allow,Deny
  Deny from all
</Files>

<Files sameaslite-store.db>
  Order Allow,Deny
  Deny from all
</Files>
